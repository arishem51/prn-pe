<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Star's Info" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Input Form -->
        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0" Padding="20">
            <StackPanel>
                <TextBlock Text="Star's info" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                
                <TextBlock Text="Star Name" Margin="0,0,0,5"/>
                <TextBox x:Name="StarNameTextBox" Height="30" Margin="0,0,0,15"/>
                
                <TextBlock Text="Dob" Margin="0,0,0,5"/>
                <DatePicker x:Name="DobDatePicker" Height="30" Margin="0,0,0,15"/>
                
                <TextBlock Text="Description" Margin="0,0,0,5"/>
                <TextBox x:Name="DescriptionTextBox" Height="30" Margin="0,0,0,15"/>
                
                <CheckBox x:Name="IsMaleCheckBox" Content="Is male" Margin="0,0,0,15"/>
                
                <TextBlock Text="Nationality" Margin="0,0,0,5"/>
                <ComboBox x:Name="NationalityComboBox" Height="30" Margin="0,0,0,20">
                    <ComboBoxItem Content="Viet Nam"/>
                    <ComboBoxItem Content="Japan"/>
                    <ComboBoxItem Content="American"/>
                </ComboBox>
                
                <Button x:Name="AddToListButton" Content="Add To List" 
                        Height="40" 
                        Background="#E0E0E0"
                        Click="AddToListButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Right Panel: Display Area -->
        <Border Grid.Column="1" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="1" 
                        Background="White" Margin="0,0,0,15">
                    <ListBox x:Name="StarListBox" 
                             BorderThickness="0"
                             Background="Transparent"/>
                </Border>
                
                <Button Grid.Row="1" x:Name="SendButton" Content="Send to server" 
                        Height="40" 
                        Background="#E0E0E0"
                        Click="SendButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
